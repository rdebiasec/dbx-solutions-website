{
  "name": "site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:static",
    "build:static": "node scripts/i18n-build.mjs && vite build",
    "build:gh-pages": "cross-env VITE_BASE_PATH=/dbx-solutions-website/ npm run build:static",
    "preview": "vite preview",
    "i18n:translate": "node scripts/translate.mjs",
    "predeploy": "npm run build:gh-pages",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "gh-pages": "^6.3.0",
    "vite": "^7.2.4"
  }
}
